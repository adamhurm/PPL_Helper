<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.achurm.pplhelper.startScreen">


    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:background="@color/colorPrimaryDark">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorSecondary" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/pushTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pullTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/legsTab"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:alignmentMode="alignBounds"
                android:columnCount="3"
                android:rowCount="9"
                android:useDefaultMargins="false">

                <TextView
                    android:id="@+id/now"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="0"
                    android:text="NOW"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/exercise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="0"
                    android:text='"Exercise"'
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/set"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="0"
                    android:text="Set"
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/setData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="0"
                    android:text="X / X"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/repData"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_rowWeight="0"
                    android:text="Y"
                    android:textAlignment="textEnd"/>

                <TextView
                    android:id="@+id/repititions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="3"
                    android:layout_rowWeight="0"
                    android:text="Repititions"
                    android:textAlignment="textEnd" />

                <Button
                    android:id="@+id/setButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_columnWeight="1"
                    android:layout_row="4"
                    android:layout_rowWeight="0"
                    android:onClick="doneSetButtonPressed"
                    android:text="Done With Set" />

                <TextView
                    android:id="@+id/previous"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="5"
                    android:layout_rowWeight="0"
                    android:text="PREVIOUS"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/entry_exercise1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="6"
                    android:layout_rowWeight="0"
                    android:text='"exercise1"' />

                <TextView
                    android:id="@+id/entry_set1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="6"
                    android:layout_rowWeight="0"
                    android:text='"set1"x'
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/entry_rep1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_row="6"
                    android:layout_rowWeight="0"
                    android:text='"rep1"' />

                <TextView
                    android:id="@+id/entry_exercise2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="7"
                    android:layout_rowWeight="0"
                    android:text='"exercise2"' />

                <TextView
                    android:id="@+id/entry_set2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="7"
                    android:layout_rowWeight="0"
                    android:text='"set2"x'
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/entry_rep2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_row="7"
                    android:layout_rowWeight="0"
                    android:text='"rep2"' />

                <TextView
                    android:id="@+id/entry_exercise3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="8"
                    android:layout_rowWeight="0"
                    android:text='"exercise3"' />

                <TextView
                    android:id="@+id/entry_set3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_row="8"
                    android:layout_rowWeight="0"
                    android:text='"set3"x'
                    android:textAlignment="textEnd" />

                <TextView
                    android:id="@+id/entry_rep3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:layout_columnWeight="1"
                    android:layout_row="8"
                    android:layout_rowWeight="0"
                    android:text='"rep3"' />

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="1"
                android:rowCount="2">

                <TextView
                    android:id="@+id/upNext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="0"
                    android:text="UP NEXT"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/nextExercise"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="0"
                    android:text='"Next Exercise"'
                    android:textAlignment="center" />

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
